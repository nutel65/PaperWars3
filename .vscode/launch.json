    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask Production",
            "type": "python",
            "request": "launch",
            "module": "waitress-serve",
            "env": {
                "FLASK_ENV": "production",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "--call",
                "server:server",
            ],
            "jinja": true,
            // "console": "externalTerminal"
        },
        {
            "name": "Flask Development",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "server/server.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                // "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            // "console": "externalTerminal"
        },
        {
            "name": "MAIN",
            "type": "python",
            "request": "launch",
            "program": "winclient/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "CLIENT",
            "type": "python",
            "request": "launch",
            "program": "winclient/client.py",
            "console": "integratedTerminal"
        }
    ]
}